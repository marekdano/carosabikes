
<%= link_to 'Back', products_path %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %>

<p id="notice"><%= notice %></p>

<div class="container anchor">
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <%= image_tag(@product.image_url, class: "img-responsive") %>
        <div class="caption details-text">
          <h3 class="pull-right"><%= number_to_currency @product.price, unit: "â‚¬ " %></h3>
          <h2><%= @product.name %></h2>
          <h5><%= @product.description %></h5>
        </div>
        <div class="comments-container">
          <%= render 'new_comment' %>
          <%= render 'comments' %>
        </div>
      </div>
    </div>
  </div>
</div>
