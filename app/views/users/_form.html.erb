<div class="container">

<%= form_for @user, html: {class: "form-horizontal center"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, "First name", class: "col-md-2 col-sm-2 control-label" %>
    <div class="col-md-6 col-sm-10">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "Last name", class: "col-md-2 col-sm-2 control-label" %>
    <div class="col-md-6 col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email", class: "col-md-2 col-sm-2 control-label" %>
    <div class="col-md-6 col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="actions">
    <div class="col-sm-offset-2 col-sm-10 btn-submit">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>
<% end %>

</div>
