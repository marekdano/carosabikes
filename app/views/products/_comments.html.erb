<div class="product-reviews">
  <div class="row">
    <% @comments.each do |comment| %>
    
      <div class="col-md-11 comment-box">
        <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
          <% if signed_in? && current_user.admin? %>
            <%= link_to "Delete", product_comment_path(@product, comment), method: :delete, data: { confirm: "Are you sure to delete this comment?" } %>
          <% end %>
        </p>
        <div class="rated" data-score="<%= comment.rating %>">Rating: </div>
        <p><%= comment.body %></p>
      </div>
    
    <% end %>
  </div>